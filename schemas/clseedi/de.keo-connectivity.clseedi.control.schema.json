{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "$id": "https://keo-connectivity.de/clseedi/de.keo-connectivity.clseedi.control.schema.json",
    "title": "Control Message",
    "description": "The backend sends the desired state to the local device",
    "type": "object",
    "properties": {
        "protocol": {
            "$ref": "file:definitions.schema.json#/definitions/protocolversion"
        },
        "limits": {
            "type": "object",
            "properties": {
                "power": {
                    "type": "object",
                    "properties": {
                        "active": {
                            "type": "object",
                            "properties": {
                                "consumption": {
                                    "$ref": "file:definitions.schema.json#/definitions/limit"
                                },
                                "production": {
                                    "$ref": "file:definitions.schema.json#/definitions/limit"
                                },
                                "envelope": {
                                    "type": "object",
                                    "properties": {
                                        "consumption": {
                                            "$ref": "file:definitions.schema.json#/definitions/envelopeLimit"
                                        },
                                        "production": {
                                            "$ref": "file:definitions.schema.json#/definitions/envelopeLimit"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "failsafes": {
            "type": "object",
            "properties": {
                "power": {
                    "type": "object",
                    "properties": {
                        "active": {
                            "type": "object",
                            "properties": {
                                "consumption": {
                                    "$ref": "file:definitions.schema.json#/definitions/failsafe"
                                },
                                "production": {
                                    "$ref": "file:definitions.schema.json#/definitions/failsafe"
                                }
                            }
                        }
                    }
                }
            }
        },
        "fallbacks": {
            "type": "object",
            "properties": {
                "power": {
                    "type": "object",
                    "properties": {
                        "active": {
                            "type": "object",
                            "properties": {
                                "envelope": {
                                    "type": "object",
                                    "properties": {
                                        "consumption": {
                                            "$ref": "file:definitions.schema.json#/definitions/envelopeFallback"
                                        },
                                        "production": {
                                            "$ref": "file:definitions.schema.json#/definitions/envelopeFallback"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "tariffs": {
            "type": "object",
            "properties": {
                "tout": {
                    "$ref": "file:definitions.schema.json#/definitions/tout"
                }
            }
        },
        "trust": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "ski": {
                        "$ref": "file:definitions.schema.json#/definitions/ski"
                    },
                    "certificate": {
                        "$ref": "file:definitions.schema.json#/definitions/certificate"
                    }
                }
            }
        },
        "notify": {
            "$ref": "file:definitions.schema.json#/definitions/notify"
        }
    },
    "required": [
        "protocol"
    ]
}
