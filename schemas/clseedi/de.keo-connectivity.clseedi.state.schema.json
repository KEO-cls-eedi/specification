{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "$id": "https://keo-connectivity.de/clseedi/de.keo-connectivity.clseedi.state.schema.json",
    "title": "State Message",
    "description": "The local device sends its current state to the backend",
    "type": "object",
    "properties": {
        "protocol": {
            "$ref": "file:definitions.schema.json#/definitions/protocolversion"
        },
        "limits": {
            "type": "object",
            "properties": {
                "power": {
                    "type": "object",
                    "properties": {
                        "active": {
                            "type": "object",
                            "properties": {
                                "consumption": {
                                    "$ref": "file:definitions.schema.json#/definitions/limit"
                                },
                                "production": {
                                    "$ref": "file:definitions.schema.json#/definitions/limit"
                                },
                                "envelope": {
                                    "type": "object",
                                    "properties": {
                                        "consumption": {
                                            "$ref": "file:definitions.schema.json#/definitions/envelopeLimit"
                                        },
                                        "production": {
                                            "$ref": "file:definitions.schema.json#/definitions/envelopeLimit"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "failsafes": {
            "type": "object",
            "properties": {
                "power": {
                    "type": "object",
                    "properties": {
                        "active": {
                            "type": "object",
                            "properties": {
                                "consumption": {
                                    "$ref": "file:definitions.schema.json#/definitions/failsafe"
                                },
                                "production": {
                                    "$ref": "file:definitions.schema.json#/definitions/failsafe"
                                }
                            }
                        }
                    }
                }
            }
        },
        "fallbacks": {
            "type": "object",
            "properties": {
                "power": {
                    "type": "object",
                    "properties": {
                        "active": {
                            "type": "object",
                            "properties": {
                                "envelope": {
                                    "type": "object",
                                    "properties": {
                                        "consumption": {
                                            "$ref": "file:definitions.schema.json#/definitions/envelopeFallback"
                                        },
                                        "production": {
                                            "$ref": "file:definitions.schema.json#/definitions/envelopeFallback"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "tariffs": {
            "type": "object",
            "properties": {
                "tout": {
                    "$ref": "file:definitions.schema.json#/definitions/tout"
                }
            }
        },
        "measurements": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "description": "A unique ID representing a set of measurement values.",
                        "maxLength": 256
                    },
                    "source": {
                        "$ref": "file:definitions.schema.json#/definitions/source"
                    },
                    "frequency": {
                        "$ref": "file:definitions.schema.json#/definitions/measurement"
                    },
                    "energy": {
                        "consumed": {
                            "$ref": "file:definitions.schema.json#/definitions/measurement"
                        },
                        "produced": {
                            "$ref": "file:definitions.schema.json#/definitions/measurement"
                        }
                    },
                    "voltage": {
                        "$ref": "file:definitions.schema.json#/definitions/voltages"
                    },
                    "current": {
                        "description": "Phase-specific current values (A)",
                        "$ref": "file:definitions.schema.json#/definitions/phaseSpecifics"
                    },
                    "power": {
                        "total": {
                            "$ref": "file:definitions.schema.json#/definitions/measurement"
                        },
                        "phases": {
                            "description": "Phase-specific power values (W)",
                            "$ref": "file:definitions.schema.json#/definitions/phaseSpecifics"
                        }
                    }
                },
                "required": [
                    "id",
                    "source"
                ]
            }
        },
        "constraints": {
            "type": "object",
            "properties": {
                "limits": {
                    "type": "object",
                    "properties": {
                        "power": {
                            "type": "object",
                            "properties": {
                                "active": {
                                    "type": "object",
                                    "properties": {
                                        "envelope": {
                                            "type": "object",
                                            "properties": {
                                                "consumption": {
                                                    "$ref": "file:definitions.schema.json#/definitions/envelopeConstraint"
                                                },
                                                "production": {
                                                    "$ref": "file:definitions.schema.json#/definitions/envelopeConstraint"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "fallbacks": {
                    "type": "object",
                    "properties": {
                        "power": {
                            "type": "object",
                            "properties": {
                                "active": {
                                    "type": "object",
                                    "properties": {
                                        "envelope": {
                                            "type": "object",
                                            "properties": {
                                                "consumption": {
                                                    "$ref": "file:definitions.schema.json#/definitions/envelopeConstraint"
                                                },
                                                "production": {
                                                    "$ref": "file:definitions.schema.json#/definitions/envelopeConstraint"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "tariffs": {
                    "type": "object",
                    "properties": {
                        "tout": {
                            "$ref": "file:definitions.schema.json#/definitions/tariffsToutConstraint"
                        }
                    }
                }
            }
        },
        "supportedEebusUseCases": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Represents the functionality the local device has discovered in the local network."
        },
        "demands": {
            "$ref": "file:definitions.schema.json#/definitions/demands"
        },
        "timestamp": {
            "$ref": "file:definitions.schema.json#/definitions/timestamp"
        },
        "notify": {
            "$ref": "file:definitions.schema.json#/definitions/notify"
        }
    },
    "required": [
        "protocol",
        "timestamp"
    ]
}
